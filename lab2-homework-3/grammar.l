%option noyywrap
%x SINGLELINECOMMENTS 
%x MULTIPLELINECOMMENTS
%%

"\/\*" { BEGIN (MULTIPLELINECOMMENTS) ;}
<MULTIPLELINECOMMENTS>[^*\n]* { } 
<MULTIPLELINECOMMENTS>"*"+[^*/\n]*
<MULTIPLELINECOMMENTS>\n
<MULTIPLELINECOMMENTS>"*"+"/" { BEGIN (INITIAL); } 

"\/\/" { BEGIN (SINGLELINECOMMENTS) ;}
<SINGLELINECOMMENTS>.* { } 
<SINGLELINECOMMENTS>\n { BEGIN (INITIAL); } 

%%

